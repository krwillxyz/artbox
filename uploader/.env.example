# where uploads land (staging area)
UPLOAD_DIR=/srv/art/incoming

# code reads/writes only here for staging;
# other tools (worker/admin) can move into /srv/art/work later
DATA_ROOT=/srv/art

# bind address and port (LAN)
HOST=0.0.0.0
PORT=8765

# optional token (leave blank to disable)
UPLOAD_TOKEN=

# name policy for saved files: stamp adds timestamp+rand, keep = sanitized original
FILENAME_MODE=stamp

# allow multiple files selection
MULTI_UPLOAD=true

# gallery page: how many recent files to show
GALLERY_LIMIT=60

